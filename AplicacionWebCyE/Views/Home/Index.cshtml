@{
    ViewBag.Title = "Home Page";
}

@*Titulo*@
<h1 class="mt-4">Panel de Administración</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Flujo de control</li>
</ol>

@*Tarjetas*@
<div class="row">
    <div class="col-xl-2 col-md-6">
        <div class="card bg-success text-white mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-9">
                        <h6>Cantidad Departamentos</h6>
                        <h6 id="TotalDepartamento">0</h6>
                    </div>
                    <div class="col-sm-3">
                        <i class="fas fa-building fa-2x"></i>
                    </div>
                    <a href="@Url.Action("Index", "Departamento")" class="small-box-footer">
                        "Mas informacoo"
                        <i class="fa fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>      
        </div>
    </div>

    <div class="col-xl-2 col-md-6">
        <div class="card bg-warning text-white mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-9">
                        <h6>Cantidad Usuarios</h6>
                        <h6 id="TotalUsuario">0</h6>
                    </div>
                    <div class="col-sm-3">
                        <i class="fas fa-users fa-2x"></i>
                    </div>
                    <a href="@Url.Action("Index", "Usuario")" class="small-box-footer">
                        "Mas informacoo"
                        <i class="fa fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>


    <div class="col-xl-2 col-md-6">
        <div class="card bg-secondary text-white mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-9">
                        <h6>Cantidad Encuestas</h6>
                        <h6 id="TotalEncuesta">0</h6>
                    </div>
                    <div class="col-sm-3">
                        <i class="fas fa-file fa-2x"></i>
                    </div>
                    <a href="@Url.Action("Index", "Encuesta")" class="small-box-footer">
                        "Mas informacoo"
                        <i class="fa fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-2 col-md-6">
        <div class="card bg-danger text-white mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-9">
                        <h6>Cantidad Cuestionarios</h6>
                        <h6 id="TotalCuestionario">0</h6>
                    </div>
                    <div class="col-sm-3">
                        <i class="fas fa-book fa-2x"></i>
                    </div>
                    <a href="@Url.Action("Index", "Cuestionario")" class="small-box-footer">
                        "Mas informacoo"
                        <i class="fa fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

</div>


@section scripts{

    <script>
        jQuery.ajax({
            url: '@Url.Action("VistaDashboard", "Reporte")',
            type: "GET",
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {

                var objeto = data.resultado;

                $("#TotalUsuario").text(objeto.TotalUsuario)
                $("#TotalEncuesta").text(objeto.TotalEncuesta)
                $("#TotalCuestionario").text(objeto.TotalCuestionario)

            }
        });

    </script>
    
    }


