@model IEnumerable<AplicacionWebCyE.Models.usuarios>

@{
    ViewBag.Title = "Lista de usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Dashboard</a></li>
    <li class="breadcrumb-item active">Usuarios</li>
</ol>

<div class="card">
    <div class="card-header">

        <i class="fas fa-users me-1"></i> Lista de Usuarios
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick="abrirModal(null)">Crear Nuevo</button>
            </div>
        </div>

        <hr />

        <table id="tabla" class="display cell-border" style="width: 100%">
            <thead>
                <tr>
                    <th>Departamento</th>
                    <th>Tipo</th>
                    <th>Nombres</th>
                    <th>Apellido Paterno</th>
                    <th>Genero</th>
                    <th>Telefono</th>
                    <th>Correo</th>
                    <th>Estado</th>
                    <th>Foto</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-x">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Usuario</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <input id="txtid" type="hidden" value="0" />

                <form id="contenedor">
                    <div class="col-sm-3">
                        <div class="mb-2">
                            <img id="img_usuario" height="197" width="200" class="border rounded mx-auto d-block img-fluid" />
                        </div>
                        <div class="mb-3">
                            <input class="form-control" type="file" id="fileUsuario" accept="image/png, image/jpg, image/jpeg" onchange="mostrarImagen(this )" />
                        </div>

                    </div>

                    <div class="row g-1">

                       
                            <div class="mb-6">
                                <label class="form-label">Departamento</label>
                                <select id="cbodepartamento" class="form-select">
                                </select>
                            </div>

                            <div class="mb-6">
                                <label class="form-label">Tipo</label>
                                <select id="cbotipo" class="form-select">
                                </select>
                            </div>
                        

                        <div class="col-sm-6">
                            <label for="txtnombre" class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="txtnombre" placeholder="Ingrese nombre" autocomplete="off">
                        </div>

                        <div class="col-sm-6">
                            <label for="txtapellidoP" class="form-label">Apellido Paterno</label>
                            <input type="text" class="form-control" id="txtapellidoP" placeholder="Ingrese apellido paterno" autocomplete="off">
                        </div>

                        <div class="col-sm-6">
                            <label for="txtapellidoM" class="form-label">Apellido Materno</label>
                            <input type="text" class="form-control" id="txtapellidoM" placeholder="Ingrese apellido materno" autocomplete="off">
                        </div>

                        <div class="col-sm-6">
                            <label for="txtgenero" class="form-label">Genero</label>
                            <input type="text" class="form-control" id="txtgenero" placeholder="Ingrese genero" autocomplete="off">
                        </div>

                        <div class="col-sm-6">
                            <label for="txttelefono" class="form-label">Telefono</label>
                            <input type="text" class="form-control" id="txttelefono" placeholder="Ingrese telefono" autocomplete="off">
                        </div>

                        <div class="col-sm-6">
                            <label for="txtcorreo" class="form-label">Correo</label>
                            <input type="text" class="form-control" id="txtcorreo" placeholder="Ingrese correo" autocomplete="off">
                        </div>

                        <div class="col-sm-6">
                            <label for="txtnombre_usu" class="form-label">Nombre de usuario</label>
                            <input type="text" class="form-control" id="txtnombre_usu" placeholder="Ingrese nombre de usuario" autocomplete="off">
                        </div>

                        <div class="col-sm-6">
                            <label for="txtpass" class="form-label">Contraseña</label>
                            <input type="text" class="form-control" id="txtpass" placeholder="Ingrese contraseña" autocomplete="off">
                        </div>

                        <div class="col-sm-6">
                            <label for="cboactivo" class="form-label">Estatus</label>
                            <select id="cboactivo" class="form-select">
                                <option value="1">Activo</option>
                                <option value="0">Inactivo</option>
                            </select>
                        </div>
                    </div>
                </form>

                <div class="row mt-2">
                    <div class="col-12">

                        <div id="mensajeError" class="alert alert-danger" role="alert">
                                A simple danger alert—check it out!
                        </div>

                    </div>
                </div>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script>
        var tabladata;
        var filaSeleccionada;

        function mostrarImagen(input) {
            if (input.files) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $("#img_usuario").attr("src", e.target.result).width(200).height(197);
                }
                reader.readAsDataURL(input.files[0]);

            }
        }


     jQuery.ajax({
         url: '@Url.Action("ListarDepartamentos", "Departamento")',
         type: "GET",
         dataType: "json",
         contentType: "application/json; charset=utf-8",
         success: function (data) {

             console.log(data)
         }
     })

     tabladata = $("#tabla").DataTable({
         responsive: true,
         ordering: false,
         "ajax": {
             "url": '@Url.Action("ListarDepartamentos", "Departamento")',
             "type": "GET",
             "datatype": "json"
         },
         "columns": [
             {"data":"ID"},
             { "data": "nombre" },
             {
                 "defaultContent": '<button type="button" class="btn btn-primary btn-sm btn-editar"><i class="fas fa-pen"></i></button>' +
                     '<button type="button" class="btn btn-danger btn-sm ms-2 btn-eliminar"><i class="fas fa-trash"></i></button>',
                 "orderable": false,
                 "searchable": false,
                 "width": "90px"
             }
         ],
            "language": {
             "url": "//cdn.datatables.net/plug-ins/1.13.5/i18n/es-ES.json"
         }
     });

        //Opción de elegir departamento
        jQuery.ajax({
            url: '@Url.Action("ListarDepartamentos", "Departamento")',
            type: "GET",
            data: null,
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {

                $("<option>").attr({ "value": "0", "disabled":true }).text("Seleccionar").appendTo("#cbodepartamento");

                $.each(data.data, function (index, item) {

                    $("<option>").attr({ "value": item.ID }).text(item.nombre).appendTo("#cbodepartamento");
                })
            },
            error: function (error) {
                console.log(error)
            }
        });


        //Opción de elegir tipo de usuario
        jQuery.ajax({
            url: '@Url.Action("ListarTipo", "Departamento")',
            type: "GET",
            data: null,
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {

                $("<option>").attr({ "value": "0", "disabled":true }).text("Seleccionar").appendTo("#cbodepartamento");

                $.each(data.data, function (index, item) {

                    $("<option>").attr({ "value": item.ID }).text(item.nombre).appendTo("#cbodepartamento");
                })
            },
            error: function (error) {
                console.log(error)
            }
        });

            function abrirModal(json) {

                $("#txtid").val(0);
                $("#txtnombre").val("");

                $("#mensajeError").hide();



                if (json != null) {

                    $("#txtid").val(json.ID);
                    $("#txtnombre").val(json.nombre);
                }

                $("#FormModal").modal("show");
            }

            $("#tabla tbody").on("click", ".btn-editar", function () {

                filaSeleccionada = $(this).closest("tr");

                var data = tabladata.row(filaSeleccionada).data();

                abrirModal(data)
            })

            $("#tabla tbody").on("click", ".btn-eliminar", function () {

                var departamentoSeleccionado = $(this).closest("tr");

                var data = tabladata.row(departamentoSeleccionado).data();

                swal({
                    title: "Precaución",
                    text: "Una vez hecho esto, no podrá recuperar el registro",
                    type: "warning",
                    showCancelButton: true,
                    confirmButtonClass: "btn-primary",
                    confirmButtonText: "Aceptar",
                    cancelButtonText: "Cancelar",
                    closeOnConfirm: true,
                },
                function () {

                    jQuery.ajax({
                        url: '@Url.Action("EliminarDepartamentos", "Departamento")',
                        type: "POST",
                        data: JSON.stringify({ ID: data.ID }),
                        dataType: "json",
                        contentType: "application/json; charset=utf-8",
                        success: function (data) {
                            debugger;

                            if (data.resultado) {
                                tabladata.row(departamentoSeleccionado).remove().draw();
                            } else {
                                swal("Error", data.mensaje, "error");
                            }
                        },
                        error: function (data) {
                            console.log(error)
                        }
                    });
                });

                console.log(data);

            })


            function Guardar() {

                var departamentos = {

                    ID: $("#txtid").val(),
                    nombre: $("#txtnombre").val()

                }

                jQuery.ajax({
                    url: '@Url.Action("GuardarDepartamentos", "Departamento")',
                    type: "POST",
                    data: JSON.stringify({ objeto: departamentos }),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {

                        debugger;

                        //Nuevo departamento
                        if (departamentos.ID == 0) {

                            if (data.resultado != 0) {

                                departamentos.ID = data.resultado;
                                tabladata.row.add(departamentos).draw(false);
                                $("#FormModal").modal("hide");

                            } else {
                                $("#mensajeError").text(data.mensaje);
                                $("#mensajeError").show();

                            }
                        }
                        //Editar departamento
                        else {
                            if (data.resultado) {

                                tabladata.row(filaSeleccionada).data(departamentos).draw(false);
                                filaSeleccionada = null;
                                $("#FormModal").modal("hide");
                            } else {
                                $("#mensajeError").text(data.mensaje);
                                $("#mensajeError").show();
                            }
                        }
                    },

                    error: function (error) {
                        console.log(error)
                    },
                    beforeSend: function () {

                    }
                });

            }

    </script>

}