
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Dashboard</a></li>
    <li class="breadcrumb-item active">Departamentos</li>
</ol>

<div class="card">
    <div class="card-header">

        <i class="fas fa-users me-1"></i> Lista Departamentos
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick="abrirModal(null)">Crear Nuevo</button>
            </div>
        </div>

        <hr />

        <table id="tabla" class="display cell-border" style="width: 100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Departamento</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Usuario</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <input id="txtid" type="hidden" value="0" />


                    <div class="row g-2">
                        <div class="col-sm-6">
                            <label for="txtnombre" class="form-label">Nombre del departamento</label>
                            <input type="text" class="form-control" id="txtnombre" placeholder="Ingrese nombre" autocomplete="off">
                        </div>


                    </div>
                <div class="row mt-2">
                    <div class="col-12">

                        <div id="mensajeError" class="alert alert-danger" role="alert">
                            A simple danger alert—check it out!
                        </div>

                    </div>
                </div>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>


    @section scripts {
        <script>
            var tabladata;
            var filaSeleccionada;

     jQuery.ajax({
         url: '@Url.Action("ListarDepartamentos", "Departamento")',
         type: "GET",
         dataType: "json",
         contentType: "application/json; charset=utf-8",
         success: function (data) {

             console.log(data)
         }
     })

     tabladata = $("#tabla").DataTable({
         responsive: true,
         ordering: false,
         "ajax": {
             "url": '@Url.Action("ListarDepartamentos", "Departamento")',
             "type": "GET",
             "datatype": "json"
         },
         "columns": [
             {"data":"ID"},
             { "data": "nombre" },
             {
                 "defaultContent": '<button type="button" class="btn btn-primary btn-sm btn-editar"><i class="fas fa-pen"></i></button>' +
                     '<button type="button" class="btn btn-danger btn-sm ms-2 btn-eliminar"><i class="fas fa-trash"></i></button>',
                 "orderable": false,
                 "searchable": false,
                 "width": "90px"
             }
         ],
            "language": {
             "url": "//cdn.datatables.net/plug-ins/1.13.5/i18n/es-ES.json"
         }
     });

            function abrirModal(json) {

                $("#txtid").val(0);
                $("#txtnombre").val("");

                $("#mensajeError").hide();



                if (json != null) {

                    $("#txtid").val(json.ID);
                    $("#txtnombre").val(json.nombre);
                }

                $("#FormModal").modal("show");
            }

            $("#tabla tbody").on("click", ".btn-editar", function () {

                filaSeleccionada = $(this).closest("tr");

                var data = tabladata.row(filaSeleccionada).data();

                abrirModal(data)
            })

            $("#tabla tbody").on("click", ".btn-eliminar", function () {

                var departamentoSeleccionado = $(this).closest("tr");

                var data = tabladata.row(departamentoSeleccionado).data();

                swal({
                    title: "Precaución",
                    text: "Una vez hecho esto, no podrá recuperar el registro",
                    type: "warning",
                    showCancelButton: true,
                    confirmButtonClass: "btn-primary",
                    confirmButtonText: "Aceptar",
                    cancelButtonText: "Cancelar",
                    closeOnConfirm: true,
                },
                function () {

                    jQuery.ajax({
                        url: '@Url.Action("EliminarDepartamentos", "Departamento")',
                        type: "POST",
                        data: JSON.stringify({ ID: data.ID }),
                        dataType: "json",
                        contentType: "application/json; charset=utf-8",
                        success: function (data) {

                            if (data.resultado) {
                                tabladata.row(departamentoSeleccionado).remove().draw();
                                swal("Éxito", "El departamento se eliminó correctamente", "success");
                            } else {
                                swal("Error", data.mensaje, "error");
                                swal("Error", "El departamento no se ha eliminó correctamente", "success");
                            }
                        },
                        error: function (data) {
                            console.log(error)
                        }
                    });
                });

                console.log(data);

            })


            function Guardar() {

                var departamentos = {

                    ID: $("#txtid").val(),
                    nombre: $("#txtnombre").val()

                }

                jQuery.ajax({
                    url: '@Url.Action("GuardarDepartamentos", "Departamento")',
                    type: "POST",
                    data: JSON.stringify({ objeto: departamentos }),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {

                        debugger;

                        //Nuevo departamento
                        if (departamentos.ID == 0) {

                            if (data.resultado != 0) {

                                departamentos.ID = data.resultado;
                                tabladata.row.add(departamentos).draw(false);
                                $("#FormModal").modal("hide");
                                swal("Mensaje", "Se ha guardado el departamento.", "success");

                            } else {
                                swal(data.mensaje, "error");
                                $("#mensajeError").text(data.mensaje);
                                $("#mensajeError").show();
                                /*swal("Mensaje", "No se ha podido guardar los cambios11.", "error")*/;
                                swal("Advertencia", data.mensaje, "warning");

                            }
                        }
                        //Editar departamento
                        else {
                            if (data.resultado) {

                                tabladata.row(filaSeleccionada).data(departamentos).draw(false);
                                filaSeleccionada = null;
                                $("#FormModal").modal("hide");
                                swal("Mensaje", "Los cambios al departamento se han guardado de forma correcta.", "success");
                            } else {
                                $("#mensajeError").text(data.mensaje);
                                $("#mensajeError").show();
                                swal("Mensaje", "No se ha podido guardar los cambios.", "error");                    
                            }
                        }
                    },

                    error: function (error) {
                        console.log(error)
                    },
                    beforeSend: function () {

                    }
                });
                                                     
            }
                
        </script>

 }
